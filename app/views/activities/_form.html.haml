= simple_form_for(@activity) do |f|
  = f.error_notification

  .form-inputs
    .large-5.medium-5.small-5.columns= f.input :name, autofocus: true
    .large-5.medium-5.small-5.columns= f.input :focus
    .large-2.medium-2.small-2.columns= f.input :weight, type: :select, collection: (1..5), selected: @activity.weight_for_selected

  .form-actions
    = f.button :submit
